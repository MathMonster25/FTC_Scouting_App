# Screens
#:include kv/homescreen.kv
#:include kv/selectteam.kv
#:include kv/addteam.kv
#:include kv/scoresheet.kv

# Kivy imports
#:import NoTransition kivy.uix.screenmanager.NoTransition

MDBoxLayout:
    id: main
    name: "main"

    orientation: "vertical"

    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 0.16

        canvas.after:
            Rectangle:
                source: "icons/ultimate_goal.png"

                # Centers the image with padding on top and bottom
                size: (((self.size[1]*1)/105)*108, self.size[1]*1)
                pos: ((self.size[0]-(((self.size[1]*0.9)/105)*108)), self.pos[1]+(self.size[1]*0.1))

        MDToolbar:
            id: toolbar1

            elevation: 0
            size_hint_y: 0.5

            left_action_items: [["menu"]]

        MDToolbar:
            id: toolbar2

            title: "FTC Scouting"
            anchor_title: "center"

            elevation: 10
            size_hint_y: 0.5

    ScreenManager:
        id: screen_manager
        transition: NoTransition()

        # Add all screens to ScreenManager

        HomeScreen:
            name: "home_screen"
            id: home_screen

        SelectTeam:
            name: "select_team"
            id: select_team

        AddTeam:
            name: "add_team"
            id: add_team

        ScoreSheet:
            name: "score_sheet"
            id: score_sheet