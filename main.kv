# Screens
#:include kv/homescreen.kv
#:include kv/selectteam.kv
#:include kv/addteam.kv
#:include kv/scoresheet.kv

# Kivy imports
#:import NoTransition kivy.uix.screenmanager.NoTransition

GridLayout:
    cols: 1
    id: main
    name: "main"

    MDToolbar:
        id: toolbar

        title: "FTC Scouting App"
        elevation: 10
        anchor_title: "left"
        adaptive_height: True

        canvas:
            Rectangle:
                source: "icons/ultimate_goal.png"

                # Centers the image with padding on top and bottom
                size: (((self.size[1]*0.9)/765)*1565, self.size[1]*0.9)
                pos: ((self.size[0]-(((self.size[1])/765)*1565)), self.pos[1]+(self.size[1]*0.05))

    ScreenManager:
        id: screen_manager
        transition: NoTransition()

        # Add all screens to ScreenManager

        HomeScreen:
            name: "home_screen"
            id: home_screen

        SelectTeam:
            name: "select_team"
            id: select_team

        AddTeam:
            name: "add_team"
            id: add_team

        ScoreSheet:
            name: "score_sheet"
            id: score_sheet