#:import hex kivy.utils.get_color_from_hex

<ScoreSheet>:
    GridLayout:
        cols: 1

        GridLayout:
            rows: 1
            size_hint_y: 0.1

            AnchorLayout:
                anchor_x: "left"
                padding: (self.width / 50, self.height / 10)

                ImageButton:
                    image_unpressed: "icons/back_button_unpressed.png"
                    image_pressed: "icons/back_button_pressed.png"
                    size_hint: (0.15, 1)

                    on_release:
                        app.change_screen("home_screen")

            AnchorLayout:
                anchor_x: "right"

                Label:
                    halign: "right"
                    text: "Team: 00000   "
                    font_size: self.height * 0.8
                    #text_size: self.size

        GridLayout:
            cols: 2
            size_hint_y: 0.25

            Label:
                text: "Score: 0"
            Button:
                text: "Reset"

        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: max(root.height/8, 50)
                row_force_default: True
                padding: (5, 5)

                BetterLabel:
                    markup: True
                    text: "Autonomous:"
                    font_size: 25
                    rect_color_rgba: hex("#008040")
                    border_color_rgba: (0, 0, 0, 1)
                    border_thickness: 2
                BetterLabel:
                    markup: True
                    text: "Tele-Op:"
                    font_size: 25
                    rect_color_rgba: hex("#008040")
                    border_color_rgba: (0, 0, 0, 1)
                    border_thickness: 2
                BetterLabel:
                    markup: True
                    text: "Endgame:"
                    font_size: 25
                    rect_color_rgba: hex("#008040")
                    border_color_rgba: (0, 0, 0, 1)
                    border_thickness: 2