#:import hex kivy.utils.get_color_from_hex

<ScoreSheet>:
    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: "Team: 00000"
            halign: "center"

            size_hint_y: 0.07
            padding_x: sp(5)

        MDBoxLayout:
            orientation: "horizontal"
            adaptive_height: True

            MDLabel:
                id: score

                text: "Score: 0"
                halign: "center"

            MDFlatButton:
                text: "Reset"
                width: 0.5 * root.width

        ScrollView:
            MDBoxLayout:
                id: scoring_menu

                orientation: "vertical"
                adaptive_height: True

<AutonomousDropDown>
    orientation: "vertical"
    adaptive_height: True

    MDLabel:
        text: "Power Shots"
        adaptive_size: True
    MDLabel:
        text: "Wobbles Delivered"
        adaptive_size: True
    MDIconButton:
        icon: "backspace"
        user_font_size: 48
        adaptive_size: True

<TeleOpDropDown>
    orientation: "vertical"
    adaptive_height: True

    MDLabel:
        text: "High Goal Shots"
        adaptive_size: True
    MDLabel:
        text: "Middle Goal Shots"
        adaptive_size: True
    MDLabel:
        text: "Low Goal Shots"
        adaptive_size: True

<EndgameDropDown>
    orientation: "vertical"
    adaptive_height: True

    MDLabel:
        text: "Wobbles Delivered"
        adaptive_size: True