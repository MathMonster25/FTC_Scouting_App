#:import hex kivy.utils.get_color_from_hex

<ScoreSheet>:
    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: "Team: 00000"
            halign: "center"

            size_hint_y: 0.07
            padding_x: sp(5)

        MDBoxLayout:
            orientation: "horizontal"
            adaptive_height: True

            MDLabel:
                id: score

                text: "Score: 0"
                halign: "center"

            MDFlatButton:
                text: "Reset"
                width: 0.5 * root.width

                on_press:
                    app.resetScore()

        ScrollView:
            id: scroll_view

            MDBoxLayout:
                id: scoring_menu

                orientation: "vertical"
                adaptive_height: True