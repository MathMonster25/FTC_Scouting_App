#:import hex kivy.utils.get_color_from_hex
#:import MDExpansionPanelOneLine kivymd.uix.expansionpanel.MDExpansionPanelOneLine

<ScoreSheet>:
    GridLayout:
        cols: 1

        GridLayout:
            rows: 1
            size_hint_y: 0.1

            AnchorLayout:
                anchor_x: "left"
                padding: (self.width / 50, self.height / 10)

                MDIconButton:
                    icon: "arrow-left-drop-circle"
                    user_font_size: 48

                    on_release:
                        app.change_screen("home_screen")

            AnchorLayout:
                anchor_x: "right"

                MDLabel:
                    halign: "right"
                    text: "Team: 00000"
                    size: self.texture_size
                    padding_x: 5

        MDGridLayout:
            cols: 2
            adaptive_height: True

            MDLabel:
                text: "Score: 0"
                halign: "center"

            MDFlatButton:
                text: "Reset"
                halign: "center"

        ScrollView:
            MDGridLayout:
                id: scoring_menu

                cols: 1
                adaptive_height: True
                padding: (5, 5)

<AutonomousDropDown>
    adaptive_height: True
    orientation: "vertical"

    MDLabel:
        text: "Power Shots"
    MDLabel:
        text: "Wobbles Delivered"

<TeleOpDropDown>
    adaptive_height: True
    orientation: "vertical"

    MDLabel:
        text: "High Goal Shots"
        md_bg_color:
    MDLabel:
        text: "Middle Goal Shots"
    MDLabel:
        text: "Low Goal Shots"

<EndgameDropDown>
    adaptive_height: True
    orientation: "vertical"

    MDLabel:
        text: "Wobbles Delivered"