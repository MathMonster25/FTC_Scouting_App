#:import hex kivy.utils.get_color_from_hex

<ScoreSheet>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1 - app.getToolbarHeight()/root.height

        MDGridLayout:
            rows: 1
            adaptive_height: True

            AnchorLayout:
                anchor_x: "left"
                padding: (self.width / 50, self.height / 10)

                MDIconButton:
                    icon: "arrow-left-bold-circle"
                    user_font_size: 48
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color

                    on_release:
                        app.change_screen("home_screen")

            AnchorLayout:
                anchor_x: "right"

                MDLabel:
                    halign: "right"
                    text: "Team: 00000"
                    size: self.texture_size
                    padding_x: 5

        MDGridLayout:
            cols: 2
            adaptive_height: True

            MDLabel:
                text: "Score: 0"
                halign: "center"

            MDFlatButton:
                text: "Reset"
                halign: "center"

        ScrollView:
            MDGridLayout:
                id: scoring_menu

                cols: 1
                adaptive_height: True
                padding: (5, 5)

<AutonomousDropDown>
    adaptive_height: True
    orientation: "vertical"

    MDLabel:
        text: "Power Shots"
    MDLabel:
        text: "Wobbles Delivered"

<TeleOpDropDown>
    adaptive_height: True
    orientation: "vertical"

    MDLabel:
        text: "High Goal Shots"
    MDLabel:
        text: "Middle Goal Shots"
    MDLabel:
        text: "Low Goal Shots"

<EndgameDropDown>
    adaptive_height: True
    orientation: "vertical"

    MDLabel:
        text: "Wobbles Delivered"