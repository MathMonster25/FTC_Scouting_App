<SelectTeam>:
    BetterButton:
        text: "You are at the select team screen"
        button_unpressed_color: (0, 255, 255, 0.5)
        button_pressed_color: (0, 255, 255, 0.2)
        background_color: self.button_unpressed_color
        size_hint: (0.5, 0.5)
        pos_hint: {"center_x":0.5, "center_y":0.5}

        on_release:
            app.change_screen("add_team")